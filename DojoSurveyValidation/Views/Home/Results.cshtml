@model Survey
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Results</title>
</head>

<body>
    <div class="container-fluid bg-secondary bg-gradient vh-100">
        <div class="container bg-dark text-light rounded-3 p-3 d-flex justify-content-center mb-3">
            <h1>Submitted Info</h1>
        </div>
        <div class="container bg-dark text-light rounded-3 p-3">
            <div class="row justify-content-around">
                <div class="col-4">
                    <p>Name: </p>
                    <p>Dojo Location: </p>
                    <p>Favorite Language: </p>
                    <p>Comment: </p>
                </div>
                <div class="col-4">
                        <p>@Model.Name</p>
                        <p>@Model.DojoLocation</p> 
                        <p>@Model.FaveLanguage</p>
                        <p>@Model.Comment</p>
                </div>
            </div>
            <form action="/">
                <button class="btn btn-danger">Go Back</button>
            </form>
        </div>
    </div>
</body>

</html>